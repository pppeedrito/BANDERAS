<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_banderas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sr_pedro.banderas.BANDERAS"
    android:background="?android:attr/colorPressedHighlight">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:id="@+id/btnJugar"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Selecciona una bandera:"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="33dp"
                android:layout_marginStart="33dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1" />

            <Button
                android:text="Jugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJOC"
                android:onClick="btnJoc" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10px">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    app:srcCompat="@drawable/argentina"

                    android:id="@+id/btArg"
                    android:onClick="btnArgentina"
                    android:layout_width="135dp"
                    android:layout_height="90dp"
                    android:paddingRight="20dp" />

                <ImageButton
                    app:srcCompat="@drawable/chile"
                    android:id="@+id/btchi"
                    android:onClick="btnChile"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="40dp" />

            </LinearLayout>

    </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10px">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <ImageButton
                    app:srcCompat="@drawable/paki"
                    android:id="@+id/btPaki"
                    android:onClick="btnPaki"
                    android:layout_width="135dp"
                    android:layout_height="90dp" />

                <ImageButton
                    app:srcCompat="@drawable/canada"
                    android:id="@+id/btCana"
                    android:onClick="btnCanada"
                    android:layout_width="168dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="40dp" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10px">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    app:srcCompat="@drawable/tailandia"
                    android:id="@+id/bttai"
                    android:onClick="btnTai"
                    android:layout_width="135dp"
                    android:layout_height="90dp"/>

                <ImageButton
                    app:srcCompat="@drawable/japo"
                    android:id="@+id/btjapo"
                    android:onClick="btnJapo"
                    android:layout_height="match_parent"
                    android:layout_width="150dp"
                    android:layout_marginLeft="40dp" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10px">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    app:srcCompat="@drawable/russia"
                    android:id="@+id/btrussi"
                    android:onClick="btnRuss"
                    android:layout_width="135dp"
                    android:layout_height="90dp" />

                <ImageButton
                    app:srcCompat="@drawable/british"
                    android:id="@+id/btbritish"
                    android:onClick="btnBritish"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="40dp" />
                android:

            </LinearLayout>

        </TableRow>
    </TableLayout>

</RelativeLayout>
